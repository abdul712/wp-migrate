{
  "name": "wp-migrate",
  "version": "1.0.0",
  "description": "Comprehensive WordPress migration tool that enables seamless database, media, and file synchronization between WordPress environments.",
  "main": "build/index.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "clean": "rimraf build/",
    "lint:js": "eslint src/assets/js/ --ext .js",
    "lint:js:fix": "eslint src/assets/js/ --ext .js --fix",
    "lint:css": "stylelint 'src/assets/scss/**/*.scss'",
    "lint:css:fix": "stylelint 'src/assets/scss/**/*.scss' --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "webpack-bundle-analyzer build/static/js/*.js",
    "prepare": "npm run build",
    "zip": "npm run build && zip -r wp-migrate.zip . -x 'node_modules/*' 'src/assets/scss/*' 'src/assets/js/src/*' '.git/*' '.github/*' 'tests/*' '*.log' '.env*' 'webpack.config.js' 'package*.json' 'composer.*'"
  },
  "keywords": [
    "wordpress",
    "migration",
    "database",
    "sync",
    "backup",
    "cli",
    "multisite",
    "plugin"
  ],
  "author": {
    "name": "Abdul Rahim",
    "email": "abdul712@users.noreply.github.com",
    "url": "https://github.com/abdul712"
  },
  "license": "GPL-2.0-or-later",
  "homepage": "https://github.com/abdul712/wp-migrate",
  "repository": {
    "type": "git",
    "url": "https://github.com/abdul712/wp-migrate.git"
  },
  "bugs": {
    "url": "https://github.com/abdul712/wp-migrate/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@wordpress/eslint-plugin": "^17.0.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.50.0",
    "eslint-config-wordpress": "^2.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.0",
    "node-sass": "^9.0.0",
    "rimraf": "^5.0.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "stylelint": "^15.11.0",
    "stylelint-config-wordpress": "^17.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "lodash": "^4.17.21"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "src/assets/js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/assets/js/**/*.js",
      "!src/assets/js/**/*.min.js",
      "!src/assets/js/vendor/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-wordpress",
    "rules": {
      "declaration-property-unit-allowed-list": {
        "line-height": []
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@wordpress/eslint-plugin/recommended"
    ],
    "env": {
      "browser": true,
      "jquery": true
    },
    "globals": {
      "wp": "readonly",
      "wpMigrate": "writable"
    }
  }
}