{
  "name": "wp-migrate",
  "version": "1.0.0",
  "description": "A comprehensive WordPress migration tool that enables seamless database, media, and file synchronization between WordPress environments",
  "main": "src/assets/js/admin.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "lint": "eslint src/assets/js/ --ext .js",
    "lint:fix": "eslint src/assets/js/ --ext .js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf build/ dist/",
    "package": "npm run build && npm run clean && node scripts/package.js"
  },
  "keywords": [
    "wordpress",
    "migration",
    "database",
    "media",
    "backup",
    "sync",
    "wp-cli"
  ],
  "author": {
    "name": "Abdul Rahim",
    "email": "abdul712@users.noreply.github.com",
    "url": "https://github.com/abdul712"
  },
  "license": "GPL-2.0-or-later",
  "homepage": "https://github.com/abdul712/wp-migrate",
  "repository": {
    "type": "git",
    "url": "https://github.com/abdul712/wp-migrate.git"
  },
  "bugs": {
    "url": "https://github.com/abdul712/wp-migrate/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "postcss-preset-env": "^8.4.0",
    "rimraf": "^5.0.0",
    "sass": "^1.62.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "jquery": "^3.7.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/assets/js/**/*.js",
      "!src/assets/js/vendor/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "browser": true,
      "jquery": true,
      "es6": true
    },
    "globals": {
      "wp": "readonly",
      "ajaxurl": "readonly",
      "wpMigrateAdmin": "readonly"
    }
  }
}