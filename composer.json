{
    "name": "abdul712/wp-migrate",
    "description": "Comprehensive WordPress migration tool that enables seamless database, media, and file synchronization between WordPress environments.",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "migration",
        "database",
        "sync",
        "backup",
        "cli",
        "multisite"
    ],
    "homepage": "https://github.com/abdul712/wp-migrate",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Abdul Rahim",
            "email": "abdul712@users.noreply.github.com",
            "homepage": "https://github.com/abdul712",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/abdul712/wp-migrate/issues",
        "source": "https://github.com/abdul712/wp-migrate"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mysqli": "*",
        "ext-zip": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "phpcompatibility/php-compatibility": "^9.3",
        "roave/security-advisories": "dev-latest"
    },
    "suggest": {
        "ext-openssl": "For secure data transmission",
        "ext-mbstring": "For handling multibyte strings",
        "ext-gd": "For image processing during media sync"
    },
    "autoload": {
        "psr-4": {
            "WPMigrate\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WPMigrate\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "phpcs --standard=WordPress --extensions=php --ignore=vendor/,node_modules/,build/ ."
        ],
        "lint:fix": [
            "phpcbf --standard=WordPress --extensions=php --ignore=vendor/,node_modules/,build/ ."
        ],
        "test": [
            "phpunit"
        ],
        "test:unit": [
            "phpunit --testsuite=unit"
        ],
        "test:integration": [
            "phpunit --testsuite=integration"
        ],
        "analyze": [
            "@lint",
            "@test"
        ],
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "/tests",
            "/node_modules",
            "/src/assets/scss",
            "/src/assets/js/src",
            "/.git",
            "/.github",
            "/phpunit.xml",
            "/webpack.config.js",
            "/package.json",
            "/package-lock.json",
            "/.env*",
            "/composer.json",
            "/composer.lock",
            "/.phpcs.xml"
        ]
    }
}